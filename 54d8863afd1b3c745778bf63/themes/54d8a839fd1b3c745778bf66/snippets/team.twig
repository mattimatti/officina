                                    <h4 class="serif">{{config.team1.hello}}</h4>
                                   {{config.team1.hellotext}}  
                                </div>
                            </div>
                            <div class="team-item-descr">
                                <div class="team-item-name">
                                    {{config.team1.namesurname}}
                                </div>
                                <div class="team-item-role">
                                     {{config.team1.title}}
                                </div>
                                <div class="team-social-links">
                                     {% if config.team1.facebook != '' %}<a href="{{config.team1.facebook}}" target="_blank"><i class="fa fa-facebook"></i></a>{% endif %}
                                     {% if config.team1.twitter != '' %}<a href="{{config.team1.twitter}}" target="_blank"><i class="fa fa-twitter"></i></a>{% endif %}
                                     {% if config.team1.pinterest != '' %}<a href="{{config.team1.pinterest}}" target="_blank"><i class="fa fa-pinterest"></i></a>{% endif %}
