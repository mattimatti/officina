{% extends "layouts/theme.twig" %}

{% block title %}Index{% endblock %}
{% block head %}
    {{ parent() }}
{% endblock %}
{% block content %}
<div class="row">
     <div class="span12">
         <ul class="breadcrumb">
    <li>
    <a href="/">Home</a> <span class="divider">/</span>
    </li>
    <li class="active">
    <a href="/cart">Shopping Cart</a>
    </li>
    </ul>
   </div>
 </div>





<form method="post" action="">

<table class="table table-bordered table-striped">
      <thead>
        <tr>
        <th>Elimina</th>
        <th>Immagine</th>
        <th>Prodotto</th>
        <th>Tipo</th>
        <th>Quantit√†</th>
        <th>Prezzo Unitario</th>
        <th>Subtotale</th>
        </tr>
      </thead>
      <tbody>
         {% for item in cart.items %}
        <tr>
          <td class=""><input type="checkbox" name="update[{{item.id}}][remove]" value="1" id="optionsCheckbox"></td>
          <td class="muted center_text"><a href="{{item.product.url}}"><img src="{{item.product.featuredImage.low}}"></a></td>
          <td><a href="{{item.product.url}}">{{item.name}}</a></td>
          <td>{{item.product.type}}</td>
          <td>
            <div class="input-append">
              <input class="span1" name="update[{{item.id}}][quantity]" id="appendedInputButton" placeholder="1" value="{{item.quantity}}" type="text">
              <button class="btn" type="submit"><i class="icon-refresh"></i></button>
            </div>
          </td>
          <td>{{cart.currency}} {{item.price}}</td>
          <td>{{cart.currency}} {{item.subtotal}}</td>
        </tr> 
        {% endfor %}
        <tr>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
        <td>Subtotale</td>
        <td><strong>{{cart.currency}} {{cart.total}}</strong></td>
        </tr>
        <tr>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
        <td>Invio</td>
