        <td>&nbsp;</td>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
        <td>Tasse</td>
        <td><strong>{{cart.currency}} {{cart.taxes}}</strong></td>
        </tr> 
        <tr>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
        <td>Totale</td>
        <td><strong>{{cart.currency}} {{cart.grandtotal}}</strong></td>
        </tr>  
      </tbody>
      </table>
      
<div class="row mt20">
