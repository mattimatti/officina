{% extends "layouts/theme.twig" %}

{% block title %}Index{% endblock %}
{% block head %}
    {{ parent() }}
{% endblock %}
{% block content %}


 
<div class="row">
     <div class="span12">
         <ul class="breadcrumb">
    <li>
    <a href="/">Home</a> <span class="divider">/</span>
    </li>
    <li class="active">
    Registrazione <span class="divider">/</span>
    </li>
    <li class="active">
     Passo 2
    </li>
    </ul>
   </div>
 </div>

 <div class="row">
   <div class="span12">
   
    
           <div class="accordion" id="accordion2">
           
      
    <div class="accordion-group">
    <form method="post">
      <div class="accordion-heading">
        <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#">
          <h4>Passo 2: Informazioni di invio</h4>
        </a>
      </div>
 
 
      <div id="collapse2" class="accordion-body collapse collapse in">
        <div class="accordion-inner">
                    <div class="span6 no_margin_left">
                    
                    
                        <legend>Indirizzo di fatturazione</legend>

                        <div class="control-group">
                        <label class="control-label">Indirizzo 1</label>
                        <div class="controls ">
                          <input type="text" placeholder="" value="{{ customer.default_address.address1   }}" id="default_address_address1" name="default_address[address1]" class="span4">
                        </div>
                        </div>
                        
                        
                        <div class="control-group">
                        <label class="control-label">Indirizzo 2</label>
                        <div class="controls ">
                          <input type="text" placeholder="" value="{{ customer.default_address.address2   }}" id="default_address_address2"  name="default_address[address2]" class="span4">
                        </div>
                        </div>
            
            
                        <div class="control-group">
                        <label class="control-label">Città</label>
                        <div class="controls ">
                          <input type="text" placeholder="" value="{{ customer.default_address.city   }}" id="default_address_city" name="default_address[city]" class="span4">
                        </div>
                        </div>
                        
                        
                        <div class="control-group">
                        <label class="control-label">Codice postale</label>
                        <div class="controls ">
                          <input type="text" placeholder="" value="{{ customer.default_address.zipCode   }}" id="default_address_zipCode"  name="default_address[zipCode]" class="span4">
                        </div>
                        </div>
                        
                         
                        <div class="control-group">
                        <label class="control-label">Paese/Nazione {{ customer.default_address.country   }}</label>
                        <div class="controls ">
                        
                          <select  class="span4" id="default_address_country" name="default_address[country]">
                          <option value="uk" >United Kingdom</option>
                          <option value="us" >United States</option>
                          </select>
                          
                        </div>
                        </div>
                        <a href="javascript:;" id="copia-button">copia per la spedizione</a>
            
            </div>
            
            
            
            
            <div class="span5">

          <legend>Indirizzo di spedizione</legend>
          
            <div class="control-group">
            <label class="control-label">Indirizzo 1</label>
            <div class="controls docs-input-sizes">
              <input type="text" placeholder="" value="{{ customer.shipping_address.address1   }}" id="shipping_address_address1" name="shipping_address[address1]" class="span4">
            </div>
            </div>
            <div class="control-group">
            <label class="control-label">Indirizzo 2</label>
            <div class="controls docs-input-sizes">
              <input type="text" placeholder="" value="{{ customer.shipping_address.address2   }}" id="shipping_address_address2"  name="shipping_address[address2]" class="span4">
            </div>
            </div>            <div class="control-group">
            <label class="control-label">Città</label>
            <div class="controls docs-input-sizes">
              <input type="text" placeholder="" value="{{ customer.shipping_address.city   }}" id="shipping_address_city"  name="shipping_address[city]" class="span4">
            </div>
            </div>
            <div class="control-group">
            <label class="control-label">Codice postale</label>
            <div class="controls docs-input-sizes">
              <input type="text" placeholder="" value="{{ customer.shipping_address.zipCode   }}" id="shipping_address_zipCode"  name="shipping_address[zipCode]" class="span4">
            </div>
            </div>

            <div class="control-group">
            <label class="control-label">Paese/Nazione {{ customer.shipping_address.country   }}</label>
            <div class="controls docs-input-sizes">
            
              <select  class="span4" id="shipping_address_country" name="shipping_address[country]">
              <option value="uk" >United Kingdom</option>
              <option value="us" >United States</option>
              </select>
              
            </div>
            </div>
            
            
            </div>
            <div class="span11 no_margin_left">
            <br /><button type="submit" class="btn btn-primary pull-right">Concludi</button><br /><br /><br />
              </div>
        </div>

      </div>
 
 </form>
 
    </div>
      
      
      

      
      
      

</div>
{% endblock %}



{% block customjs %}
      <script type="text/javascript">
      
      $(document).ready(function(){
      
          $("#copia-button").click(function(){
              
              $("#shipping_address_address1").val($("#default_address_address1").val());
              $("#shipping_address_address2").val($("#default_address_address2").val());
              $("#shipping_address_city").val($("#default_address_city").val());
              $("#shipping_address_zipCode").val($("#default_address_zipCode").val());
              $("#shipping_address_country").val($("#default_address_country").val());

          });
      
      });

      
      </script>
{% endblock %}



