{% extends "layouts/theme.twig" %}

{% block title %}Index{% endblock %}
{% block head %}
    {{ parent() }}
{% endblock %}
{% block content %}

<div class="row">

    <div class="span3">
        <ul class="nav">
            {% for item in collections %}
             <li>
                 <a href="{{ item.url }}" >{{ item.name }} ({{ item.products|length }})</a>
             </li>
             {% endfor %}
        </ul>
    </div>


    <div class="span9">
          <ul class="breadcrumb">
              <li>
              <a href="/">Home</a> <span class="divider">/</span>
              </li>
                <li class="active">
                <a href="{{ collection.link }}">{{ collection.name }}</a>
                </li>
            </ul>
            
            

              {% for product in collection.products %}
              
              <div class="row">
                   <div class="span1">
                    <a href="{{product.url}}"><img alt="{{product.name}}"  src="{{product.featuredImage.medium}}"></a>
                    </div>   
                    
                    <div class="span6">
                     <a href="{{product.url}}"><h5>{{product.name}}</h5></a>
                              <p>{{product.description| raw}}</p>
                    </div>  
                
                    <div class="span1">
                     <p>â‚¬ {{product.price}}</p>
                    </div>   
                    
                    <div class="span2">
                     <p><a class="btn btn-primary ajax" href="/cart/add/{{product.id}}">Add to cart</a></p>
                     <p><a class="" href="javascript:;">Add to Wish List</a></p>
                     <p><a class="" href="javascript:;">Add to Compare</a></p>
                    </div>
              </div>
              <hr/>
              {% endfor %}
        
        
        
            <div class="pagination">
                <ul>
                <li><a href="#">Prev</a></li>
                <li class="active">
                <a href="#">1</a>
                </li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
                <li><a href="#">Next</a></li>
                </ul>
            </div>
        
        
        
        </div> <!-- col right -->    
            
            
            
    </div>
    
    
    
    

</div>

{% endblock %}
